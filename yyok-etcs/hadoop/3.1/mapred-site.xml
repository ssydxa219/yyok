<!-- Put site-specific property overrides in this file. -->

<configuration>
    <!-- 指定mr框架为yarn方式 -->
    <property>
        <name>mapreduce.framework.name</name>
        <value>yarn</value>
    </property>

    <!-- 指定mapreduce jobhistory地址 -->
    <property>
        <name>mapreduce.jobhistory.address</name>
        <value>ddx:10020</value>
    </property>

    <!-- 任务历史服务器的web地址 -->
    <property>
        <name>mapreduce.jobhistory.webapp.address</name>
        <value>ddx:19888</value>
    </property>

    <property>
        <name>mapreduce.application.classpath</name>
        <value>
            /ddhome/bin/hadoop/etc/hadoop,
            /ddhome/bin/hadoop/share/hadoop/common/*,
            /ddhome/bin/hadoop/share/hadoop/common/lib/*,
            /ddhome/bin/hadoop/share/hadoop/hdfs/*,
            /ddhome/bin/hadoop/share/hadoop/hdfs/lib/*,
            /ddhome/bin/hadoop/share/hadoop/mapreduce/*,
            /ddhome/bin/hadoop/share/hadoop/mapreduce/lib/*,
            /ddhome/bin/hadoop/share/hadoop/yarn/*,
            /ddhome/bin/hadoop/share/hadoop/yarn/lib/*
        </value>
    </property>

    <property>
        <name>yarn.app.mapreduce.am.env</name>
        <value>/ddhome/bin/hadoop</value>
    </property>
    <property>
        <name>mapreduce.map.env</name>
        <value>/ddhome/bin/hadoop</value>
    </property>
    <property>
        <name>mapreduce.reduce.env</name>
        <value>/ddhome/bin/hadoop</value>
    </property>
    <property>
        <name>mapreduce.job.jvm.numtasks</name>
        <value>10</value>
        <description>How many tasks to run per jvm. If set to -1, there is no limit.
        </description>
    </property>

    <property>
        <name>mapreduce.map.speculative</name>
        <value>true</value>
        <description>If true, then multiple instances of some map tasks may be executed in parallel.</description>
    </property>

    <property>
        <name>mapreduce.reduce.speculative</name>
        <value>true</value>
        <description>If true, then multiple instances of some reduce tasks  may be executed in parallel.</description>
    </property>

    <!--mapreduce.map.memory.mb

    mapreduce.reduce.memory.mb
    mapreduce.map.java.opts

    mapreduce.reduce.java.opts

    -->

    <property>
        <name>mapred.task.java.opts</name>
        <value>-Xmx2000m</value>
    </property>

    <property>
        <name>mapred.child.java.opts</name>
        <value>${mapred.task.java.opts} -Xmx1000m</value>
        <final>true</final>
    </property>

    <property>
        <name>mapreduce.admin.map.child.java.opts</name>
        <value>-Xmx1024m</value>
    </property>

    <property>
        <name>mapreduce.admin.reduce.child.java.opts</name>
        <value>-Xmx1536m</value>
    </property>



    <property>
        <name>mapred.map.child.java.opts</name>
        <value>-Xmx512m</value>
    </property>

    <property>
        <name>mapred.reduce.child.java.opts</name>
        <value>-Xmx1024m</value>
    </property>

</configuration>
